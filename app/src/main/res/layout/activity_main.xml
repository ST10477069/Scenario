<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#658899"
tools:context=".MainActivity">

<TextView
    android:id="@+id/playlistTextView"
    android:layout_width="190dp"
    android:layout_height="71dp"
    android:text="Welcome To Playlist"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.477"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.189" />

<Button
    android:id="@+id/playlistButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="31dp"
    android:layout_marginTop="125dp"
    android:layout_marginEnd="41dp"
    android:text="Click To Playlist"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    app:layout_constraintEnd_toStartOf="@+id/exitButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/playlistTextView"
    tools:ignore="MissingConstraints" />

<Button
    android:id="@+id/exitButton"
    android:layout_width="100dp"
    android:layout_height="48dp"
    android:layout_marginStart="41dp"
    android:layout_marginTop="126dp"
    android:layout_marginEnd="37dp"
    android:layout_marginBottom="362dp"
    android:text="Exit"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/playlistButton"
    app:layout_constraintTop_toBottomOf="@+id/playlistTextView"
    tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>